<Window x:Class="ColoritWPF.Views.AddNewCarModel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавление новой модели авто" Height="100" Width="300"
        DataContext="{Binding AddCarModelPage, Source={StaticResource Locator}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
            <Label>Наименование модели</Label>
            <TextBox Text="{Binding Path=Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" MinWidth="150">
                <TextBox.InputBindings>
                    <KeyBinding Command="{Binding Path=AddCarCommand}" Key="Enter"/>
                </TextBox.InputBindings>
            </TextBox>
        </StackPanel>
        <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Закрыть" Click="Button_Click" MaxHeight="25" Margin="0,0,5,0"></Button>
            <Button Content="Добавить" Command="{Binding AddCarCommand}" MaxHeight="25" Margin="0,0,5,0"></Button>
        </StackPanel>
    </Grid>
</Window>
